# Required Settings
#-----------------

# Oracle Database (Required for application)
ORACLE_PASSWORD=your_secure_password
ORACLE_HOST=your-oracle-host
ORACLE_PORT=1521
ORACLE_SERVICE=your_service_name
ORACLE_USER=bina_cloud

# Optional Settings
#-----------------

# JVM Options (Optional, defaults shown)
JAVA_OPTS=-Xmx512m -Xms256m

# Grafana (Optional, defaults shown)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Alert Notifications (Optional)
#-----------------------------
# At least one notification channel (Slack or Email) should be configured for alerts

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#alerts

# Email Notifications
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=team@yourdomain.com
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_specific_password

# Application Settings (Optional, defaults shown)
#--------------------------------------------
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080 